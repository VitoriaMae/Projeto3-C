#include <stdio.h>
#include <stdlib.h>


int main() {

    int numeroPositivo;
    int numeroDigitado, numeroDigitado2;

    printf("Quantas vezes quer repetir esta mensagem? \n");
    scanf("%d", &numeroDigitado);

    for (int i = 0; i < numeroDigitado; i++) {
        printf("\nOla mundo\n");
    }

    printf("\nAgora digite um numero entre 0 a 100: \n");
    scanf("%d", &numeroDigitado2);

    if (numeroDigitado2 < 100) {
        printf("\nNumero digitado foi: %d:\n", numeroDigitado2);


        int i = 0;
        while (i <= numeroDigitado2) {
            printf("%d\n", i);
            i++;

    } else { (numeroDigitado2 <= 0 ){
        printf("\nO numero digitado e invalido por ser zero ou igual, maior que cem!\n");
    }
    }

    do {
        printf("\nAgora digite um numero positivo: ");
        scanf("%d", &numeroPositivo);

        if (numeroDigitado < 0) {
            printf("\nNumero digitado e invalido, por favor digite um numero positivo.\n");
        }


    } while (numeroDigitado < 0);

    printf("\nVoce digitou o numero: %d\n", numeroPositivo);

    return 0;
}
