#include <stdio.h>
#include <stdlib.h>

int main()
{

    int idade;
    char nome [45];
    float altura;
    char genero;

    printf("Nome:\n");
    printf("Idade:\n");
    printf("Genero:\n");
    printf("Altura:\n");

    printf("Digite sua Idade \n");
    scanf("%d", &idade);

    printf("Digite seu Nome \n");
    scanf("%s", &nome);

    printf("Digite sua Altura \n");
    scanf("%f", &altura);

     printf("Digite seu Genero \n");
    scanf("%s", &genero);

    printf("Sua idade: %d \n", idade);
    printf("Seu nome: %s \n", nome);
    printf("Sua altura: %f \n", altura);
    printf("Seu genero: %c \n", genero);

    return 0;
}







#include <stdio.h>
#include <stdlib.h>

int main()
{
    int idade;
    int convite;

    printf("Tem convite? digite 1 para sim e 0 para nao\n");
    scanf("%d", &convite);

    if (convite == 0){

    }

    printf("Qual sua idade? \n");
    scanf("%d", &idade);
    if (idade>=18) {
        printf("Voce pode entrar na festa!\n");
    }else{
        printf("Voce nao pode entrar na festa, e preciso ter no minimo 18 anos para entrar na festa!\n");
    }

    return 0;

}










#include <stdio.h>
#include <stdlib.h>

int main()
{
    char nome [45];
    float nota1, nota2, media;
    int faltas;
    int media;

    printf("Digite seu nome \n");
    scanf("%s", &nome);

    printf("Digite a nota da primeira prova \n");
    scanf("%f", &nota1);

    printf("Digite a nota da segunda prova \n");
    scanf("%f", &nota2);

    printf("Digite o numero de faltas \n");
    scanf("%d", &faltas);

    if (faltas>=15) {
        printf("Aluno automaticamente reprovado!");
    }else{
        printf("Continue o processo avaliativo \n");
    }

    media = (nota1+nota2) / 2;

    printf("A media desse aluno foi %f \n", &media);


    return 0;
}







#include <stdio.h>
#include <stdlib.h>

int main()
{
    int numero1, numero2, resultado;
    char operadorMatematico;

    printf("Digite o Operador (+, -, *, /) \n");
    scanf("%c", &operadorMatematico);

    printf("Digite o numero 1 \n");
    scanf("%d", &numero1);

    printf("Digite o numero 2 \n");
    scanf("%d", &numero2);

      if (operadorMatematico == '+') {
        resultado = numero1 + numero2;
        printf("O resultado da soma e: %d \n", resultado);

}

      else if (operadorMatematico == '-') {
        resultado = numero1 - numero2;
        printf("O resultado da subtracao e: %d \n", resultado);
}

      else if (operadorMatematico == '*') {
        resultado = numero1 * numero2;
        printf("O resultado da multiplicacao e: %d \n", resultado);
}

    else if (operadorMatematico == '/') {
        if (numero2 != 0) {
            resultado = numero1 / numero2;
            printf("O resultado da divisao e: %d \n", resultado);
        }else {
            printf("Erro: divisao por zero nao permitida!");
        }
}

    return 0;
}

